{
    class Program
    {
        static void Main(string[] args)
        {
            SayHi();
            Console.ReadLine();
        }

        static void SayHi()
        {
            Console.WriteLine("Hello User");
        }
    }
}

{
    class Program
    {
        static void Main(string[] args)
        {
            SayHi("Mike");
            SayHi("John");
            SayHi("Peter");
            Console.ReadLine();
        }

        static void SayHi(string name)
        {
            Console.WriteLine("Hello " + name);
        }
    }
}
